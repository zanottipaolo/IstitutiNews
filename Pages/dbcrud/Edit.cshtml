@page
@model schools_identity.Pages.dbcrud.EditModel

@{
    ViewData["Title"] = "Update";
}

<h1 style="text-align:center;">Update</h1>

<h4>School</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="list.Id" />
            <div class="form-group">
                <label asp-for="list.name" class="control-label"></label>
                <input asp-for="list.name" class="form-control" />
                <span asp-validation-for="list.name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="list.city" class="control-label"></label>
                <input asp-for="list.city" class="form-control" />
                <span asp-validation-for="list.city" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="list.address" class="control-label"></label>
                <input asp-for="list.address" class="form-control" />
                <span asp-validation-for="list.address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="list.headmaster" class="control-label"></label>
                <input asp-for="list.headmaster" class="form-control" />
                <span asp-validation-for="list.headmaster" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="list.courses" class="control-label"></label>
                <input asp-for="list.courses" class="form-control" />
                <span asp-validation-for="list.courses" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<p style="text-align: center;"><a asp-page="./Index">Back to the list</a></p>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
