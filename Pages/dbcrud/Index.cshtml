@page
@model schools_identity.Pages.dbcrud.IndexModel

@{
    ViewData["Title"] = "List of schools";
}

<h1 style="text-align: center;">SCHOOLS</h1>
<p style="text-align: center;">This page includes a list of the schools of Italy and of the world.</p>

<style>
    th,td{
        color: white;
    }
</style>

<div class="table-responsive">
    <table class="table table-hover table-dark text-center" style="border: 3px solid greenyellow;">
        <thead>
            <tr>
                <th>
                    Name
                </th>
                <th>
                    City
                </th>
                <th>
                    Address
                </th>
                <th>
                    Headmaster
                </th>
                <th>
                    Courses
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.list) {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.city)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.address)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.headmaster)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.courses)
                    </td>
                    <td>
                        <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-warning"><i class='far fa-edit'></i></a> | 
                        <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-danger"><i class='fa fa-remove'></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div class="text-center">
    <p><a asp-page="Create"><u>Create New</u></a></p>
</div>

<div class="text-center">
    <form method="post">
        <p>Search for a specific school</p>
        <input type="text" asp-for="filter_name" placeholder="Name" />
        <input type="text" asp-for="filter_city" placeholder="City" />
        <input type="text" asp-for="filter_address" placeholder="Address" />
        <input type="text" asp-for="filter_headmaster" placeholder="Headmaster" />
        <input type="text" asp-for="filter_courses" placeholder="Courses" />
        <div class="form-group mt-3">
            <button class="btn btn-primary"><i class="fa fa-search"></i></button>
        </div>
    </form>
</div>